{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "js"],
  "testPathIgnorePatterns": ["<rootDir>/build/", "<rootDir>/node_modules/"],
  "collectCoverageFrom": ["server/**/*.ts", "!server/**/*.test.ts", "!server/**/typeDefs.ts", "!server/**/resolvers.ts", "!server/index.ts", "!server/utils/buildSchema.ts", "!server/utils/generateResolver.ts"],
  "coverageReporters": ["json-summary", "html"]
}
